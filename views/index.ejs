      <input id="chat-input" type="text" placeholder="Ask any coding question..." />
      <button type="submit">Send</button>
    </form>
  </div>

  <script>
    const chatToggle = document.getElementById('chat-toggle');
    const aiChat = document.getElementById('ai-chat');
    const closeChat = document.querySelector('.close-chat');
    const log = document.getElementById('chat-log');
    const form = document.getElementById('chat-form');
    const input = document.getElementById('chat-input');

    // Toggle chat visibility
    chatToggle.addEventListener('click', () => {
      aiChat.classList.add('open');
      chatToggle.style.display = 'none';
      input.focus();
    });

    // Close chat and show toggle button
    closeChat.addEventListener('click', () => {
      aiChat.classList.remove('open');
      chatToggle.style.display = 'flex';
    });

    // Add message to chat log
    function addMsg(role, text) {
      const wrap = document.createElement('div');
      wrap.style.marginBottom = '10px';
      wrap.innerHTML = `<div style="font-weight:600;color:${role==='You'?'#2d3748':'#4c51bf'}">${role}</div>`+
        `<div style="white-space:pre-wrap; color:#2d3748; background:${role==='You'?'#edf2f7':'#ffffff'}; padding:8px 10px; border-radius:8px; border:1px solid #e2e8f0;">${text.replace(/</g,'&lt;')}</div>`;
      log.appendChild(wrap);
      log.scrollTop = log.scrollHeight;
    }

    // Handle chat form submission
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const q = input.value.trim();
      if (!q) return;
      
      addMsg('You', q);
      input.value = '';
      addMsg('Bot', 'Thinking...');
      
      try {
        const res = await fetch('/ai/chat', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ message: q })
        });
        const data = await res.json();
        // replace last 'Thinking...' message
        log.removeChild(log.lastChild);
        addMsg('Bot', data.reply || 'Sorry, no response');
      } catch (err) {
        log.removeChild(log.lastChild);
        addMsg('Bot', 'Error contacting AI service');
      }
    });

    // Close chat when clicking outside (optional)
    document.addEventListener('click', (e) => {
      if (aiChat.classList.contains('open') && 
          !aiChat.contains(e.target) && 
          e.target !== chatToggle) {
        aiChat.classList.remove('open');
        chatToggle.style.display = 'flex';
      }
    });
  </script>
